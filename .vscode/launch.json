{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runsslserver",
        "0.0.0.0:8000",
        "--certificate",
        "./certs/localhost.crt.pem",
        "--key",
        "./certs/localhost.key.pem"
      ],
      "django": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "redirectOutput": true
    }
  ]
}
